<%-include("../header")%>
<div class="container">
    <form action="/employee/update/<%= info._id %>" method="post">
    <div class="row">
        <div class="col-md-6 offset-md-3 mt-4">
        
            <div class="card border border-success my-4">
                <div class="card-header bg-success"><h2 class="text-light">Update Employee</h2></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input type="text" class="form-control" value= "<%= info.full_name %>" name="full_name" placeholder="Full Name" />
                        </div>
                        <div class="form-group">
                            <label>Salary</label>
                            <input type="text" class="form-control" value= "<%= info.salary %>" placeholder="salary" name="salary" />
                        </div>
                        <div class="form-group">
                            <label>Gender</label>
                            Male<input type="radio" name="Gender" <% if(info.Gender == "male"){ %> checked <% } %> value="male" />
                            Female<input type="radio" name="Gender" <% if(info.Gender == "female"){ %> checked <% } %>value="female" />
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <textarea class="form-control" placeholder="Address" name="address" ><%= info.address %></textarea>
                        </div>
                        <div class="form-group">
                            <label>City</label>
                            <select class="form-control" name="city">
                                <option>Select</option>
                                <% city.forEach((x)=>{ %>
                                    <option <% if(info.city==x.name){ %> selected <% } %>><%= x.name %></option> 
                                <% }) %>
                                 
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Contact</label>
                            <input type="text" class="form-control" value= "<%= info.contact %>" name="contact" placeholder="Contact" />
                        </div>
                        
                    </div>
                    <div class="card-footer bg-success">
                        <input type="submit" value="Update" class="btn btn-light" />
                    </div>
                </div>
            </div>
        
        </div>
    </div>    
    </form>
    
    
</div>

<br />
<br />
<br />
<br />
<br />
<%-include("../footer")%>