<%-include("../header")%>
<div class="container">
  <div class="row">
      <div class="col-md-12">
          <h2>List of Employee</h2>
                          
                      <% if(result.length==0){ %>

                        <div class="alert alert-warning">
                          No data found
                        </div>


                        <% } else{ %>
                      <table class="table table-dark table-striped table-hover">
                          <tr>
                            <th>S.no</th>
                            <th>Name</th>
                            <th>Contact</th>
                            <th>Details</th>
                            <th>Edit</th>
                            <th>Delete</th>
                            
                          </tr>
                          <% result.forEach ((x , n)=>{ %>

                            <tr>
                                <td><%= n+1 %></td>
                                <td><%= x.full_name %></td>
                                
                                <td><%= x.contact %></td>
                                <td><a href="/Employee/detail/<%= x._id %>" class="btn btn-success">Details</a></td>
                                <td><a href="/Employee/edit/<%= x._id %>" class="btn btn-info">Edit</a></td>
                                <td><a href="/Employee/delete/<%= x._id %>" class="btn btn-danger">Delete</a></td>
                                
                                
                            </tr>
                        
                        
                        <% }) %>
                          
                      </table>
                      <% } %>                
              </div>
          </div>

      </div>
  </div>
</div>    
<br />
<br />
<%-include("../footer")%>